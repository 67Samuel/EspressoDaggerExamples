<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.codingwithmitch.espressodaggerexamples.ui.ListFragment"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.codingwithmitch.espressodaggerexamples.ui.DetailFragment"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_finalFragment"
            app:destination="@id/finalFragment" />
    </fragment>

    <fragment
        android:id="@+id/finalFragment"
        android:name="com.codingwithmitch.espressodaggerexamples.ui.FinalFragment"
        tools:layout="@layout/fragment_final" />
</navigation>